%h1 Print Bag Numbers

%p Print labels for applying to registration bags

= form_tag url: bag_labels_path, method: :post do
  .row
    .small-6.columns
      = label_tag :label_type, "Label paper format"
      = select_tag :label_type, options_for_select(["Avery8167", "Avery5160", "L7161"])
    .small-2.columns
      = label_tag :num_per_reg, "Labels per Registrant"
      = number_field_tag :num_per_reg, 1, {min: 1}
    .small-4.columns.right_aligned
      = label_tag :display_expenses, "Display Expenses On Label"
      = check_box_tag :display_expenses, false
  .row
    .small-12.columns
      = submit_tag "Create PDF", class: "button", data: { disable_with: false }
