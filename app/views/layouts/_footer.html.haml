.non_printable#bottom_nav
  .row
    .small-12.medium-3.columns
      %ul
        %li.footer__list-header
          %h6= t(".information_header")
        %li= link_to t('.contact_us'), new_feedback_path
        %li= link_to t('.help'), help_welcome_path
        - if Page.find_by(slug: 'privacy-policy')
          %li= link_to t('.privacy_policy'), page_path('privacy-policy')
    .small-12.medium-3.columns
      = render "layouts/rulebook_footer"
    .small-12.medium-3.columns
      %ul
        %li.footer__list-header
          %h6= t(".organizers_header")
        %li= link_to t(".features"), example_description_path
        %li= link_to t(".upcoming_changes"), changelog_welcome_path
        - if user_signed_in? && policy(current_user).manage_feedback?
          %li= link_to t(".handle_feedback"), admin_feedback_index_path
        -# %li= link_to "Help Translate", help_translate_welcome_path
    .small-12.medium-3.columns
      %ul
        %li.footer__list-header
          %h6= t(".language_header")
        - I18n.available_locales.each do |locale|
          %li= link_to t("language_name", locale: locale), new_locale_path(locale), hreflang: locale, lang: locale
        %li.footer__list-separation= link_to t(".help_translate"), help_translate_welcome_path
  .row
    .small-12.columns
      %p.footer__attribution= t(".developed_by")
      %p.footer__attribution= link_to t(".code"), "https://github.com/rdunlop/unicycling-registration", target: "_blank"

